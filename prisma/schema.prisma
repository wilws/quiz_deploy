model Creator {
  id        Int        @id @default(autoincrement())
  name      String
  createdAt DateTime   @default(now())
  question  Question[]
}

model Question {
  id        Int      @id @default(autoincrement())
  question  String
  answer    Boolean
  creatorId Int
  createdAt DateTime @default(now())
  creator   Creator     @relation(fields: [creatorId], references: [id])
}

model ConnectionTesting {
  id Int  @id @default(autoincrement())
  connection Boolean
  createdAt DateTime @default(now())
}